<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	
	<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="#1bbedb"
	>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		
		>
		<ImageView  
			android:id=	"@+id/bt_Write"
		    android:layout_width="32px" 
		    android:layout_height="32px" 
			android:src="@drawable/write"
		    android:layout_marginLeft="7dip"
		    android:layout_weight="1"
		    android:paddingTop="4px"
	    />
	    <TextView
	    	android:id="@+id/tv_UserID"
	    	android:gravity="center"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#000000"
	    	android:text="UserID"
	    	android:textSize="17px"
	    	android:layout_weight="3"
	    	android:paddingBottom="7px"
	    	android:paddingTop="7px"
	    />
	    <ImageView
	    	android:id="@+id/bt_Refresh"
	    	android:layout_width="32px"
	    	android:layout_height="32px"
	    	android:src="@drawable/refresh"
	    	android:layout_marginRight="7dip"
	    	android:layout_weight="1"
	    	android:paddingTop="4px"
	    />
    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    >
    	<ImageView
    		android:id="@+id/user_image"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		/>
    	<LinearLayout
    		android:orientation="vertical"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		>
    		<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>
				
				<TextView
					android:id="@+id/user_text" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textColor="#1aba0b"
					android:textSize="17px"
					android:text=""
					/>
				<Button
					android:id="@+id/btn_follow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:text="关注/取消关注"
					/>
			</LinearLayout>
			<TextView
				android:id="@+id/user_detail_info"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:text=""
				/>
    	</LinearLayout>
    </LinearLayout>
    </LinearLayout>
    
    <TabHost
    	android:id="@+id/tabHost"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
    <TabWidget 
    	android:id="@android:id/tabs" 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    	</TabWidget>	
     	<FrameLayout android:id="@android:id/tabcontent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                      <TextView android:id="@+id/view1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <TextView android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <TextView android:id="@+id/view3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                    <TextView android:id="@+id/view4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
             </FrameLayout>      
     </TabHost>        
     
    <com.android.fanfou.MyListView
    	android:id="@+id/mlv_list"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		
		android:fadingEdge="none"
		android:textColor="#000000"
		android:cacheColorHint="#00000000"
		android:paddingBottom="35px"
    	android:listSelector="@drawable/list_selector"
    />
    
  </LinearLayout>
 
 <LinearLayout
    android:orientation="horizontal"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:layout_alignParentBottom="true" 
 	android:background="#1bbedb"
 	android:paddingTop="7px"
 	android:paddingBottom="7px"
 	>
 	<TextView  
 		android:id="@+id/bt_HomePage"
 		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:gravity="center"
	    android:textColor="#000000"
	    android:text="首页"
	    android:textSize="17px"
	    android:layout_weight="1"
	    android:paddingLeft="1px"
    />  
    <TextView
    	android:id="@+id/bt_Me"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#000000"
    	android:text=" @我"
    	android:textSize="17px"
    	android:layout_weight="1"
    />
    <TextView
    	android:id="@+id/bt_Letter"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#000000"
    	android:text="私信"
    	android:textSize="17px"
    	android:layout_weight="1"
    />
    <TextView
    	android:id="@+id/bt_Space"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#000000"
    	android:text="空间"
    	android:textSize="17px"
    	android:layout_weight="1"
    />
    <TextView
    	android:id="@+id/bt_Search"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#000000"
    	android:text="搜索"
    	android:textSize="17px"
    	android:layout_weight="1"
    />
    <TextView
    	android:id="@+id/bt_Cookies"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#000000"
    	android:text="收藏"
    	android:textSize="17px"
    	android:layout_weight="1"
    	android:paddingRight="1px"
    />
 </LinearLayout>
  	
</RelativeLayout>
